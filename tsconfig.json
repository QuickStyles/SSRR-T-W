    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "rootDir": ".",
    "outDir": "./dist/",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "dist"
  ],
}